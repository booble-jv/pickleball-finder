{
  "name": "pickleball-finder",
  "version": "1.0.0",
  "description": "Find and connect with pickleball players and courts in your area",
  "main": "dist/main.js",
  "homepage": "https://your-website.com",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron .",
  "start:prod": "npm run build:prepare && cross-env NODE_ENV=production ELECTRON_FORCE_FILE=1 electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron . --dev\"",
    "dev:react": "webpack serve --mode development --port 3000",
    "dev:electron": "tsc -w -p tsconfig.main.json",
    "build": "npm run build:react && npm run build:electron && electron-builder",
    "build:react": "webpack --mode production && node scripts/inject-prod-csp.js",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:win": "npm run build && electron-builder --win",
  "build:prepare": "npm run build:react && npm run build:electron",
  "build:appx": "npm run build:prepare && electron-builder --win appx --x64 --publish=never",
  "build:nsis": "npm run build:prepare && electron-builder --win nsis --x64 --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --runInBand"
  },
  "build": {
    "appId": "com.yourcompany.pickleball-finder",
    "productName": "Pickleball Finder",
    "directories": {
      "output": "dist/build",
      "buildResources": "build"
    },
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "dist/renderer/**",
      "package.json",
      "!dist/build/**"
    ],
    "extraResources": [
      {
        "from": "dist/renderer",
        "to": "renderer",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appx",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "booble",
      "requestedExecutionLevel": "asInvoker"
    },
    "appx": {
      "applicationId": "PickleballFinder",
      "backgroundColor": "#464646",
      "displayName": "Pickleball Finder",
      "identityName": "booble.PickleballFinder",
      "publisherDisplayName": "booble",
      "languages": [
        "en-US"
      ],
      "setBuildNumber": true,
      "publisher": "CN=1A82A13B-AAA9-4DBF-A256-14717E9367D8"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.2.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron": "^38.1.1",
    "electron-builder": "^25.1.7",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "nodemon": "^3.1.10",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "sass": "^1.77.0",
    "sass-embedded": "^1.92.1",
    "sass-loader": "^14.2.1",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.2",
    "util": "^0.12.5",
    "wait-on": "^7.2.0",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
